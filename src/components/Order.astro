---
const stages = [
  {
    type: "done",
    text: "Cart Review",
  },
  {
    type: "done",
    text: "Checkout",
  },
  {
    type: "active",
    text: "Special Offer",
  },
  {
    type: "pending",
    text: "Confirmation",
  },
];
---

<section class="flex flex-col items-center">
  <h2 class="text-4xl text-center font-semibold">
    Wait ! your order in progress.
  </h2>
  <h4 class="py-2">Lorem ipsum dolor sit amet, consectetur adipiscing</h4>
  <div
    id="stages"
    class="flex justify-around w-full justify-center md:px-36 my-6"
  >
    {
      stages.map(({ type, text }, index) => (
        <div class="flex flex-col md:flex-row items-center md:gap-3">
          {type == "active" && (
            <div
              id="Tick"
              class="bg-custom-blue h-6 md:h-10 text-lg p-1  w-6 md:w-10 text-white flex justify-center items-center rounded-full"
            >
              {index + 1}
            </div>
          )}
          {type == "done" && (
            <div
              id="Tick"
              class="bg-custom-green h-6 md:h-10 text-lg p-1 w-6 md:w-10 text-white flex justify-center items-center rounded-full"
            >
              <img src="/img/tick-circle.png" alt="" />
            </div>
          )}
          {type == "pending" && (
            <div
              id="Tick"
              class=" border-custom-blue border-2 h-6 md:h-10 p-1 text-lg w-6 md:w-10 text-custom-blue flex justify-center items-center rounded-full"
            >
              {index + 1}
            </div>
          )}
          <div class="flex gap-1">
            <span class="hidden md:flex">Stage {index + 1}:</span>
            <span> {text} </span>
          </div>
        </div>
      ))
    }
  </div>
</section>
